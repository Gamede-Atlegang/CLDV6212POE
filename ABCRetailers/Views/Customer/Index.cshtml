@model IEnumerable<ABCRetailers.Models.Customer>
@{
	ViewData["Title"] = "Customers";
}

<div class="d-flex justify-content-between align-items-center mb-3">
	<h2>Customers</h2>
	<a class="btn btn-primary" asp-action="Create">Add New Customer</a>
</div>

@if (TempData["Message"] is string m)
{
	<div class="alert alert-success">@m</div>
}

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Username</th>
			<th>Email</th>
			<th>Shipping Address</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var c in Model)
		{
			<tr>
				<td>@c.Name @c.Surname</td>
				<td>@c.Username</td>
				<td>@c.Email</td>
				<td>@c.ShippingAddress</td>
				<td class="text-end">
					<a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@c.CustomerId">Edit</a>
					<form asp-action="Delete" asp-route-id="@c.CustomerId" method="post" class="d-inline">
						<button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this customer?');">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>