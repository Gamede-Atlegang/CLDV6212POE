@model IEnumerable<ABCRetailers.Models.Product>
@{
	ViewData["Title"] = "Products";
}
<div class="d-flex justify-content-between align-items-center mb-3">
	<h2>Products</h2>
	<a class="btn btn-primary" asp-action="Create">Add New Product</a>
</div>
@if (TempData["Message"] is string m)
{
	 <div class="alert alert-success">@m</div>
}
<table class="table table-striped align-middle">
	<thead>
		<tr>
			<th style="width:110px">Image</th>
			<th>Name</th>
			<th>Description</th>
			<th class="text-end">Price</th>
			<th>Stock</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var p in Model)
		{
			<tr>
				<td>
					@if (!string.IsNullOrWhiteSpace(p.ImageUrl))
					{
						<img src="@p.ImageUrl" class="img-thumbnail" style="max-height:80px" />
					}
				</td>
				<td>@p.ProductName</td>
				<td>@p.Description</td>
				<td class="text-end">@p.Price.ToString("C2")</td>
				<td>
					<span class="badge @(p.StockAvailable == 0 ? "bg-danger" : p.StockAvailable < 5 ? "bg-warning text-dark" : "bg-success")">
						@p.StockAvailable
					</span>
				</td>
				<td class="text-end">
					<a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@p.ProductId">Edit</a>
					<form asp-action="Delete" asp-route-id="@p.ProductId" method="post" class="d-inline">
						<button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this product?');">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>