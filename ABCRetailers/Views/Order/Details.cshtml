@model ABCRetailers.Models.Order
@{
	ViewData["Title"] = "Order Details";
}
<h2>Order Details</h2>
<hr />
<div class="row g-3">
	<div class="col-md-6">
		<label class="form-label">Order ID</label>
		<input value="@Model.OrderId" class="form-control" readonly />
	</div>
	<div class="col-md-6">
		<label class="form-label">Order Date</label>
		<input value="@Model.OrderDate.ToString("MM/dd/yyyy HH:mm")" class="form-control" readonly />
	</div>
	<div class="col-md-6">
		<label class="form-label">Customer</label>
		<input value="@Model.Username" class="form-control" readonly />
	</div>
	<div class="col-md-6">
		<label class="form-label">Product</label>
		<input value="@Model.ProductName" class="form-control" readonly />
	</div>
	<div class="col-md-6">
		<label class="form-label">Quantity</label>
		<input value="@Model.Quantity" class="form-control" readonly />
	</div>
	<div class="col-md-6">
		<label class="form-label">Unit Price</label>
		<input value="@Model.UnitPrice.ToString("C2")" class="form-control" readonly />
	</div>
	<div class="col-md-6">
		<label class="form-label">Total Price</label>
		<input value="@Model.TotalPrice.ToString("C2")" class="form-control" readonly />
	</div>
	<div class="col-md-6">
		<label class="form-label">Status</label>
		<input value="@Model.Status" class="form-control" readonly />
	</div>
</div>
<div class="mt-3">
	<a asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-primary">Edit</a>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>